<%= form_with(model: target) do |form| %>
  <% if target.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(target.errors.count, "error") %> prohibited this target from being saved:</h2>

      <ul>
        <% target.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-3">
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_area :description, class:"form-control", placeholder:"Description" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.date_field :start_date, class:"form-control", placeholder:"Start Date" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.date_field :finish_date, class:"form-control", placeholder:"Finish Date" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :attribute_name, class:"form-control", placeholder:"Attribute" %>
  </div>


  <div class="field form-group mb-3">
    <%= form.text_field :status, class:"form-control", placeholder:"Status" %>
  </div>

  <div class="field form-group mb-3" class="form-control">
    <%= form.select :team_id,Team.all.pluck(:name,:id),{prompt:'Team'},{class: "form-control"}%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<% end %>
